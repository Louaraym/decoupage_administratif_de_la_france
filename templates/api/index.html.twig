{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container text-center">
    <h1>Découpage administratif de la France</h1>
    <div class="divider"></div>
    <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ '/images/regions.png' }}" alt="carte regions">
                <div class="carousel-caption">
                    <h5 style="color: black;">Les régions</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ '/images/departement.jpg' }}" alt="carte départements">
                <div class="carousel-caption">
                    <h5 style="color: black; margin-top: 20px;">Les départements</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ '/images/villes.jpg' }}" alt="carte villes">
                <div class="carousel-caption">
                    <h5 style="color: black; margin-top: 20px;">Les villes</h5>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" data-slide="prev" role="button">
            <span class="fas fa-chevron-left fa-2x"></span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" data-slide="next" role="button">
            <span class="fas fa-chevron-right fa-2x"></span>
        </a>
    </div>
</div>
{% endblock %}
