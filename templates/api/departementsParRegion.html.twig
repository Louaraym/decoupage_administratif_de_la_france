{% extends 'base.html.twig' %}

{% block title %}Les régions de France{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">La liste des départements par région</h1>
    <div class="divider"></div>
    <form action="" method="get">
        <div class="row">
            <div class="col-md-10">
               <div class="form-group">
                   <select name="region" id="region" class="form-control custom-select">
                       <option value="toutes">Toutes les régions</option>
                      {% for maRegion in mesRegions %}
                          <option value="{{ maRegion.code }}" {% if(app.request.query.get('region') == maRegion.code)%} selected {% endif %}>
                              {{ maRegion.code }}-{{ maRegion.nom }}
                          </option>
                       {% endfor %}
                   </select>
               </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn border-warning btn-secondary">Rechercher</button>
            </div>
        </div>
    </form>
    <div class="row">
        {% for departement in mesDepartements %}
        <div class="col-sm-4 col-md-3 mb-3">
            <div class="card h-100  text-white border-warning bg-secondary text-center">
                <div class="card-header">N° {{ departement.code }}</div>
                <div class="card-body">
                    <p class="card-text">{{ departement.nom }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
